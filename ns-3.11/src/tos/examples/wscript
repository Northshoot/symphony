#OBS! it is necessary to build your app this way, because of the xerces library
def build(bld):
    obj = bld.create_ns3_program('tos-simple',
                                 ['tos'])
    obj.env.append_value("LINKFLAGS",["-lxerces-c","-ldl"])

    print "*** obj.env tos-examples***"
    print obj.env['LINKFLAGS']
    
    obj.source = 'tos.cc'
    #obj.use = [mod for mod in bld.env['NS3_ENABLED_MODULES']]



